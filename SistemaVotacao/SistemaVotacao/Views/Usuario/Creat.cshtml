@model SistemaVotacao.Models.Usuario
@{
    ViewData["Title"] = "Criar Usuário";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Criar Novo Usuário</h2>

    <form asp-controller="Usuario" asp-action="Creat" method="post">
        <div class="mb-3">
            <label asp-for="nome" class="form-label">Nome</label>
            <input asp-for="nome" class="form-control" />
            <span asp-validation-for="nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="titulo_eleitoral" class="form-label">Título Eleitoral</label>
            <input asp-for="titulo_eleitoral" class="form-control" />
            <span asp-validation-for="titulo_eleitoral" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="senha_hash" class="form-label">Senha</label>
            <input asp-for="senha_hash" type="password" class="form-control" />
            <span asp-validation-for="senha_hash" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="role" class="form-label">Função</label>
            <select asp-for="role" class="form-select">
                <option value="Comum">Eleitor</option>
                <option value="Gerente">Gerente</option>
                <option value="Admin">Administrador</option>
            </select>
            <span asp-validation-for="role" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-controller="Usuario" asp-action="List" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
