@model IEnumerable<SistemaVotacao.Controllers.VotoViewModel>

@{
    ViewData["Title"] = "Registro de Votos";
}

<h1>Registro de Votos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Novo Voto</a>
</p>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Eleitor</th>
            <th>Candidato</th>
            <th>Data do Voto</th>
            <th>Registrado em</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.nome_eleitor)</td>
                <td>@Html.DisplayFor(modelItem => item.nome_candidato)</td>
                <td>@Html.DisplayFor(modelItem => item.data_voto)</td>
                <td>@Html.DisplayFor(modelItem => item.criado_em)</td>
                <td>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.id_voto" />
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Tem certeza que deseja excluir este voto?')">
                            Excluir
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>